@using AviBlog.Core.ViewModel
@model IEnumerable<AviBlog.Core.ViewModel.PingServiceViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    <a href="#" id="create-ping-url-link">Create</a>
</p>
<table>
    <tr>
        <th>
            PingUrl
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PingUrl)
            </td>
            <td>
                @Html.Hidden(string.Format("edit-hidden-{0}", item.Id),item.Id)
                <a href="#" id=@string.Format("edit-link-{0}",item.Id) class="ping-edit-link" >Edit</a> |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }

</table>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    var pingIndexUrl = '@Url.Action("Index")';
    var pingAddUpdateUrl = '@Url.Action("Submit")';
</script>
<div id="ping-service-edit-dialog">
    @Html.Partial("_PingServiceForm", new PingServiceViewModel())
</div>