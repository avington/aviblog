@model AviBlog.Core.ViewModel.PostListViewModel
           

@section HeadTagSection
{
    <meta name="Description" content="Steven Moseley on programming, technology and the things of life in general."/>
}  


@{
    ViewBag.Title = Model.BlogTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="posts-wrapper">
    @foreach (var post in Model.Posts)
    {
        @Html.Partial("_Post", post)
    }

</div>

