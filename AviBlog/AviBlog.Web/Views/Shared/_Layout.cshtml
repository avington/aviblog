<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href='http://fonts.googleapis.com/css?family=Questrial|Acme' rel='stylesheet' type='text/css'>
        <link href="@Url.Content("~/Content/reset.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/Home.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"> </script>
    </head>
    <body>
        <header id="header">
            <div id="header-wrapper">
                <div id="header-wrapper-left">
                    <h1>STEVEN MOSELEY</h1>
                    <p>About that art of writing code, plus other minutiae.</p>
                </div>
                <div id="header-wrapper-right">
                    <nav id="nav-main">
                        <ul>
                            <li>
                                <a href="#">HOME</a>
                            </li>
                            <li>
                                <a href="#">ABOUT ME</a>
                            </li>
                        </ul>
                    </nav>
                    <nav id="nav-social">
                        <ul>
                            <li><a href="#" ><img src="@Url.Content("~/content/images/icons/feed.png")" alt="rss feed"/></a></li>
                            <li><a href="#"><img src="@Url.Content("~/content/images/icons/twitter.png")" alt="follow me on twitter"/></a></li>
                            <li><a href="#"><img src="@Url.Content("~/content/images/icons/linkedin.png")" alt="visit my linked in profile"/></a></li>
                            <li><a href="#"><img src="@Url.Content("~/content/images/icons/google.png")" alt="visit my google+ page"/></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="clear"></div>
        </header>
        <section>
            <div class="main-content-wrapper">
                @RenderBody()
            </div>
            <aside>
                right side
            </aside>
            <div class="clear"></div>
        </section>
        <div class="clear"></div>
        <footer>
            <div id="footer-wrapper">
                footer
            </div>
        </footer>
    </body>
</html>