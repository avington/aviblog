<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href='http://fonts.googleapis.com/css?family=Questrial|Acme' rel='stylesheet' type='text/css'/>
        <link href="@Url.Content("~/Content/reset.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/Home.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Home/Rss")" type="application/rss+xml" rel="" />
        <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"> </script>
        <!-- Google +1 script Start -->
        <b:if cond='data:post.isFirstPost'>
            <script type="text/javascript">
                (function() {
                    var po = document.createElement('script');
                    po.type = 'text/javascript';
                    po.async = true;
                    po.src = 'https://apis.google.com/js/plusone.js';
                    var s = document.getElementsByTagName('script')[0];
                    s.parentNode.insertBefore(po, s);
                })();
            </script>
        </b:if>
        <!-- Google +1 script End -->
    </head>
    <body>
        <header id="header">
            <div id="header-wrapper">
                <div id="header-wrapper-left">
                    <h1>@Html.ActionLink("Steven Moseley","Index","Home")</h1>
                    <p>About that art of writing code, plus other minutiae.</p>
                </div>
                <div id="header-wrapper-right">
                    <nav id="nav-main">
                        <ul>
                            <li>
                                @Html.ActionLink("ACTIVE","Index","Archive")
                            </li>
                            <li>
                                @Html.ActionLink("ABOUT ME","About","Home")
                            </li>
                        </ul>
                    </nav>
                    <nav class="col3 pad_left2 nav-social">
                        <h4>Follow Me</h4>
                        <ul>
                            <li><a href="https://twitter.com/#!/siravington"><img src="@Url.Content("~/content/images/icons/twitter.png")" alt="">Twitter</a></li>
                            <li><a href="http://www.linkedin.com/pub/steve-moseley/b/122/527"><img src="@Url.Content("~/content/images/icons/linkedin.png")" alt="">Linkedin</a></li>
                            <li><a href="https://plus.google.com/106749740819311476842/posts?hl=en"><img src="@Url.Content("~/content/images/icons/google.png")" alt="">Google+</a></li>
                            <li><a href="#"><img src="@Url.Content("~/content/images/icons/feed.png")" alt="">RSS Feed</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="clear"></div>
        </header>
        <section id="body-wrapper">
            <div class="main-content-wrapper col1">
                @RenderBody()
            </div>
            <aside>
                @Html.Action("TagCloud","Tags")
            </aside>
            <div class="clear"></div>
        </section>
        <div class="clear"></div>
        <footer>
            <div id="footer-wrapper">
                footer
            </div>
        </footer>
    </body>
</html>