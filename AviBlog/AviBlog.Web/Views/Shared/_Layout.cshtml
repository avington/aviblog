@using System.Globalization
@using AviBlog.Core.Helpers
@using SquishIt.Framework

<!DOCTYPE html>
<html itemscope itemtype="http://schema.org/Article">
    <head>
        <meta charset="utf-8" />
        @Html.Action("TagStringContentMetaTag", "Tags")
        <meta name="Author" content="Steven Moseley"/>
        <meta name="copyright" content="Steven Moseley" />
        @RenderSection("HeadTagSection", required: false)
        <title>@ViewBag.Title</title>
        @Html.PackageCss()
        <link href="@Url.Action("Rss", "Home")" type="application/rss+xml" rel="" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"> </script>
        
        @Html.Action("PrimarySiteHtml", "Layout", new { id = "Head" })
        <link rel="shortcut icon" href="@Url.Content("~/Content/images/favicon.ico")" type="image/vnd.microsoft.icon" />
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"> </script>
        <![endif]-->
        
        @Html.PackageHeaderJs()
    </head>
    <body>
        <header id="header">
            <div class="header-wrapper">
                <div class="header-wrapper-left">
                    <h1 class="header-blog-title">@Html.ActionLink("Steven Moseley", "Index", "Home")</h1>
                    <p>Talking software development as well as other minutua.</p>
                </div>
                <div class="header-wrapper-right">
                    <nav class="nav-main">
                        <ul>
                            <li>
                                @Html.ActionLink("ARCHIVE", "Index", "Archive")
                            </li>
                            <li>
                                @Html.ActionLink("ABOUT ME", "About", "Home", new { id = 1 }, null)
                            </li>
                        </ul>
                    </nav>
                    <nav class="col3 pad_left2 nav-social">
                        <h4 class="follow-me-title">Follow Me</h4>
                        <ul>
                            <li><a href="https://twitter.com/#!/siravington"><img src="@Url.Content("~/content/images/icons/twitter.png")" alt="">Twitter</a></li>
                            <li><a href="http://www.linkedin.com/pub/steve-moseley/b/122/527"><img src="@Url.Content("~/content/images/icons/linkedin.png")" alt="">Linkedin</a></li>
                            <li><a href="https://plus.google.com/106749740819311476842/posts?hl=en"><img src="@Url.Content("~/content/images/icons/google.png")" alt="">Google+</a></li>
                            <li><a href="http://feeds.feedburner.com/SteveMoseley"><img src="@Url.Content("~/content/images/icons/feed.png")" alt="">RSS Feed</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="clear"></div>
        </header>
        <section class="body-wrapper">
            <div class="main-content-wrapper col1">
                @RenderBody()
            </div>
            <aside>
                @Html.Partial("_Search")
                <div class="grid-right">
                    <h4>About Me</h4>
                    <ul>
                        <li>Software architect and programmer living in sunny South Florida.
                            This blog is dedicated to programming, technology and some times random
                            thoughts and ideas I just have to express @Html.ActionLink("read more", "About", "Home", new {id =1}, null)</li>
                    </ul>
                </div>
                @Html.Action("TagCloud", "Tags")
                @Html.Action("Index", "Goodreads", new { id = "5" })
                @Html.Action("PrimarySiteHtml", "Layout", new { id = "aside" })
            </aside>
            <div class="clear"></div>
        </section>
        <div class="clear"></div>
        <footer>
            <div class="footer-wrapper">
                <div class="footer-section-1">
                    <nav class="col3 pad_left2 nav-social">
                        <h4 class="follow-me-title">Follow Me</h4>
                        <ul>
                            <li><a href="https://twitter.com/#!/siravington"><img src="@Url.Content("~/content/images/icons/twitter.png")" alt="">Twitter</a></li>
                            <li><a href="http://www.linkedin.com/pub/steve-moseley/b/122/527"><img src="@Url.Content("~/content/images/icons/linkedin.png")" alt="">Linkedin</a></li>
                            <li><a href="https://plus.google.com/106749740819311476842/posts?hl=en"><img src="@Url.Content("~/content/images/icons/google.png")" alt="">Google+</a></li>
                            <li><a href="http://feeds.feedburner.com/SteveMoseley"><img src="@Url.Content("~/content/images/icons/feed.png")" alt="">RSS Feed</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="footer-section-2">
                    <div class="copy">
                        <div>
                            <a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/3.0/"><img alt="Creative Commons License" style="border-width: 0" src="http://i.creativecommons.org/l/by-nc-sa/3.0/88x31.png" />
                            </a>
                        </div>
                    </div>
                </div>
                <div class="footer-section-3">
                    @Html.Action("MostRecentPosts","Archive",new {id = 4})
                </div>
                <div class="clear"></div>
                <div class="footer-blog-description" class="clear">
                    <div>
                        <ul>
                            <li>Blog by: Steven Moseley &copy;Copyright @DateTime.Now.Year.ToString(CultureInfo.InvariantCulture)</li>
                            <li>Site Design by: Steven Moseley</li>
                            <li>Powered by: Aviblog</li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>

        @Html.Action("PrimarySiteHtml", "Layout", new { id = "Head" })
        @Html.PackageFooterJs()
    </body>
</html>