@model AviBlog.Core.ViewModel.PostViewModel

<article>
    <div class="post-heading">
        <h2>@Html.ActionLink(Model.Title, "Post", "Posts", new {id = Model.Slug}, new {@class = "post-title-link"})</h2>
    </div>
    <div>@Html.Raw(Model.PostContent) </div>
    <div class="post-meta-info">
        <ul>
            <li class="align-left">Authored by: @Model.UserFullName </li>
            @if (Model.DatePublished.HasValue)
            {
                <li class="align-right">Published on: @Model.DatePublished.Value.ToLongDateString()</li>
            }
        </ul>
    </div>
    <div class="post-social">
        <ul>
            <li>twitter</li>
            <li>facebook</li>
            <li>linkedin</li>
            <li>google+</li>
        </ul>
    </div>
</article>